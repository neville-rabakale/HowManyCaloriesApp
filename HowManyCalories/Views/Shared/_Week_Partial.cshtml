@model Week

<div >
    <div class="mb-3">
        <label asp-for="WeekNumber"></label>
        <input asp-for="WeekNumber " class="form-control" readonly />
        <span asp-validation-for="WeekNumber" class="text-danger"></span>
    </div>
</div>
<div class="col-6">
    <div class="mb-3">
        <label asp-for="ExpectedWeight"></label>
        <input asp-for="ExpectedWeight" class="form-control" readonly />
        <span asp-validation-for="ExpectedWeight" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AverageWeight"></label>
        <input asp-for="AverageWeight" class="form-control" readonly />
        <span asp-validation-for="AverageWeight" class="text-danger"></span>
    </div>
</div>
<div class="col-6">
    <div class="mb-3">
        <label asp-for="WeeklyCalories" in Kilograms></label>
        <input asp-for="WeeklyCalories" class="form-control" readonly />
        <span asp-validation-for="WeeklyCalories" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="WeeklyLoss"></label>
        <input asp-for="WeeklyLoss" class="form-control" readonly />
        <span asp-validation-for="WeeklyLoss" class="text-danger"></span>
    </div>
</div>

<div class="mb-3">
    <label asp-for="CheckIn1" id="input1"></label>
    <input asp-for="CheckIn1" class="form-control border border-secondary" />
    <span asp-validation-for="CheckIn2" class="text-danger"></span>
</div>
<div class="mb-3" id="input2" style="block">
    <label asp-for="CheckIn2"></label>
    <input asp-for="CheckIn2" class="form-control" />
    <span asp-validation-for="CheckIn2" class="text-danger"></span>
</div>
<div class="mb-3" id="input3" style="display:none">
    <label asp-for="CheckIn3"></label>
    <input asp-for="CheckIn3" class="form-control" />
    <span asp-validation-for="CheckIn3" class="text-danger"></span>
</div>
<div class="mb-3" id="input4" style="display:none">
    <label asp-for="CheckIn4"></label>
    <input asp-for="CheckIn4" class="form-control" />
    <span asp-validation-for="CheckIn4" class="text-danger"></span>
</div>
<div class="mb-3" id="input5" style="display:none">
    <label asp-for="CheckIn5"></label>
    <input asp-for="CheckIn5" class="form-control" />
    <span asp-validation-for="CheckIn5" class="text-danger"></span>
</div>
<div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary" id="submitButton">SUBMIT</button>
    <a class="btn btn-secondary" asp-controller="Weeks" asp-action="Summary">SUMMARY</a>
    <a class="btn btn-danger" onclick="return ValidateInput()">END PROGRAM</a>
</div>

<script>
    document.getElementById("input1").addEventListener("input", function () {
        document.getElementById("input2").style.display = "block";
    });
    document.getElementById("input2").addEventListener("input", function () {
        document.getElementById("input3").style.display = "block";
    });
    document.getElementById("input3").addEventListener("input", function () {
        document.getElementById("input4").style.display = "block";
    });
    document.getElementById("input4").addEventListener("input", function () {
        document.getElementById("input5").style.display = "block";
    });
</script>
