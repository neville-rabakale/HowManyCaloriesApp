@page
@model ResendEmailConfirmationModel


<!-- Resend Email Confirmation -->
<section class="vh-100 pt-5">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="/img/Envelope.png"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
          <h2 class="col d-flex justify-content-center pt-4"> Resend confirmation</h2>
          <h4 class="col d-flex justify-content-center pt-1"> Enter your email</h4>
        <form method="post" >

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0"></p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
         <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>

        <!-- Submit -->
          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Resend</button>
          </div>

        </form>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
